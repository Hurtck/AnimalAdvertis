<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_collect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayUserTop"
    tools:context="animaladvertis.com.animaladvertis.CollectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:background="@color/title"
        android:paddingRight="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:id="@+id/iv_collect_back"
                android:layout_centerVertical="true"
                android:background="@drawable/back" />
            <TextView
                android:id="@+id/collect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:textColor="@color/dialog_bg" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:id="@+id/iv_collect_list"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/list" />

    </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_collect"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>


</RelativeLayout>
