<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_aniaml_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayUserTop"
    android:padding="10dp"
    tools:context="animaladvertis.com.animaladvertis.NewAniamlDetailActivity">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/bmob_update_close_bg_normal"
        android:id="@+id/imageView" />

    <EditText
        android:id="@+id/shopName"
        android:textColorHint="@color/littleGravy"
        android:layout_marginTop="16dp"
        android:hint="请输入商品名"
        android:layout_gravity="center_horizontal"
        android:layout_width="256dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/targetLocation"
        android:textColorHint="@color/littleGravy"
        android:layout_marginTop="16dp"
        android:hint="选择目标位置"
        android:layout_gravity="center_horizontal"
        android:layout_width="256dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/detail"
        android:textColorHint="@color/littleGravy"
        android:layout_marginTop="16dp"
        android:hint="请输入商品简单介绍"
        android:layout_gravity="center_horizontal"
        android:layout_width="256dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/type"
        android:textColorHint="@color/littleGravy"
        android:layout_marginTop="16dp"
        android:hint="商品类型"
        android:layout_gravity="center_horizontal"
        android:layout_width="256dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/importImg"
            android:textColor="@color/littleGravy"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:text="导入介绍图片>>>"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif" />
        <ImageView
            android:id="@+id/pic"
            android:textColorHint="@color/littleGravy"
            android:layout_width="match_parent"
            android:layout_height="128dp" />
        <Button
            android:id="@+id/comfirm"
            android:layout_gravity="center_horizontal"
            android:layout_width="256dp"
            android:text="注册完成"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
