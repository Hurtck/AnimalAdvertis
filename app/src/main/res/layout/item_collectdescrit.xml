<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_pictrue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tupian"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_item_collectdes_title"
            android:background="@color/alpheDarkm"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:textAllCaps="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/merchant_shape"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/collec_down"
                android:id="@+id/cv_item_collecdes_imag"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sissi "
                android:textColor="@android:color/background_light"/>
        </LinearLayout>



    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_collecdes_sell"
                android:text="积分 10"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@android:color/background_light"
                android:textStyle="normal|bold" />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/tv_item_collecdes_time"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="稀有"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@android:color/background_light" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_gotohome"
            android:layout_below="@id/ll_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@color/lineSecend"
            android:text="查看位置"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>
</LinearLayout>
